{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "strict": true,
      "target": "esnext",
      "preserveConstEnums": true,
      "declaration": true,
      "outDir": "./lib"
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
      "**/__tests__/*"
    ]
  }